<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lambo.demo.dao.DemoUserOldMapper">
  <!-- 老lambo -->
  <insert id="insertUser" parameterType="map">
    insert into demo_user(
    <if test="name != null">
      name
    </if>
    <if test="age != null">
      ,age
    </if>
    <if test="sex != null">
      ,sex
    </if>
    )
    values(
    <if test="name != null">
      #{name}
    </if>
    <if test="age != null">
      ,#{age}
    </if>
    <if test="sex != null">
      ,#{sex}
    </if>)
  </insert>
  <update id="updateUser" parameterType="map">
    update demo_user
    set id = #{id}
    <if test="name != null">
      , name = #{name}
    </if>
    <if test="age != null">
      , age = #{age}
    </if>
    <if test="sex != null">
      , sex = #{sex}
    </if>
    where id = #{id}
  </update>
  <delete id="deleteUser" parameterType="Integer">
    delete from demo_user
    where id = #{id}
  </delete>

  <select id="queryUser" parameterType="map" resultType="map">
    select id,name,age,sex
    from demo_user
    where 1=1
    <if test="id != null">
      and id = #{id}
    </if>
    <if test="name != null">
      and name like concat(concat('%',#{name}),'%')
    </if>
    <if test="age != null">
      and age = #{age}
    </if>
    <if test="startAge != null">
      and age &gt; #{startAge}
    </if>
    <if test="endAge != null">
      and age &lt; #{endAge}
    </if>
    <if test="sex != null">
      and sex = #{sex}
    </if>
  </select>
  <select id="countUser" parameterType="map" resultType="Integer">
    select count(id) num
    from demo_user
    where 1=1
    <if test="id != null">
      and id = #{id}
    </if>
    <if test="name != null">
      and name like concat(concat('%',#{name}),'%')
    </if>
    <if test="age != null">
      and age = #{age}
    </if>
    <if test="startAge != null">
      and age &gt; #{startAge}
    </if>
    <if test="endAge != null">
      and age &lt; #{endAge}
    </if>
    <if test="sex != null">
      and sex = #{sex}
    </if>
  </select>
  <select id="selectUserById" parameterType="Integer" resultType="map">
    select id,name,age,sex
    from demo_user
    where id = #{id}
  </select>
  <!-- 老lambo结束 -->
</mapper>